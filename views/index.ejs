<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            border: none;
            border-radius: 12px;
            transition: all 0.3s;
        }

        .card:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .card-img-top {
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
            object-fit: cover;
        }

        .card-title {
            color: #007bff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }
    </style>
</head>

<body>
    <section class="container py-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 text-primary">Movies</h1>
            <a href="/moviepage" class="btn btn-primary">Add Movie</a>
        </div>

        <div class="row">
            <% MovieData.forEach((movie, index) => { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="<%= movie.path %>" class="card-img-top" alt="Movie Poster" height="200">
                        <div class="card-body">
                            <h5 class="card-title"><%= movie.title %></h5>
                            <p class="card-text"><%= movie.description %></p>
                            <ul class="list-unstyled">
                                <li><strong>Release Year:</strong> <%= movie.releaseYear %></li>
                                <li><strong>Running Time:</strong> <%= movie.runningTime %> mins</li>
                                <li><strong>Quality:</strong> <%= movie.quality %></li>
                                <li><strong>Country:</strong> <%= movie.country %></li>
                                <li><strong>Genre:</strong> <%= movie.genre %></li>
                                <li><strong>Type:</strong> <%= movie.itemType %></li>
                            </ul>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a href="<%= movie.link %>" class="btn btn-success" target="_blank">Watch Now</a>
                            <div>
                                <a href="/singleMovie/<%= movie._id %>" class="btn btn-danger">View</a>
                                <a href="/movies/<%= movie.id %>" class="btn btn-warning">Edit</a>
                                <a href="/deleteMovies/<%= movie.id %>" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>
</body>

</html>